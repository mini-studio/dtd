<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_item_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@drawable/homework_list_item_selector"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tv_ranking_layout"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:background="@color/me_background_color"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_action_view_text"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/item_student_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/class_feed_next" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_ranking_layout"
                android:background="#dbdee0" />

            <TextView
                android:id="@+id/item_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tv_ranking_layout"
                android:gravity="center"
                android:paddingLeft="22dp" />

            <TextView
                android:id="@+id/item_score"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/item_student_next"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/common_teacher_blue" />
        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/me_background_color" />

</LinearLayout>