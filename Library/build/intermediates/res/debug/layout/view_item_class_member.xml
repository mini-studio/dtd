<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/relativeLayout_head" >

    <org.mini.frame.view.MiniImageView
        android:layout_marginTop="10dp"
        android:id="@+id/class_member_iv"
        android:layout_width="50dp"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        />
    <ImageView
        android:id="@+id/image_delete_user"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/class_member_iv"
        android:layout_marginLeft="-15dp"
        android:src="@drawable/image_delete" 
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/image_text_select"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/class_member_iv"
        android:layout_marginLeft="-25dp"
        android:src="@drawable/radiobox_default"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/class_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignLeft="@id/class_member_iv"
        android:layout_alignRight="@id/class_member_iv"
        android:layout_below="@id/class_member_iv"
        android:textSize="12sp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:textColor="@color/text_color"
        android:text=""/>

</RelativeLayout><!-- From: file:/Users/Wuquancheng/Documents/workspace/ChEdu/Android/Express/Library/src/main/res/layout/view_item_class_member.xml -->