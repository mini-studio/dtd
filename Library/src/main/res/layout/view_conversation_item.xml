<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/delete_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/magnifier"
            android:src="@drawable/icon_call"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="删 除"
            android:textSize="18dp"
             />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_selector">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal">

            <org.mini.frame.view.MiniImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/contact_avatar"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />
            <ImageView
                android:id="@+id/icon_badge"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="-5dp"
                android:layout_toRightOf="@id/contact_avatar"
                android:layout_alignTop="@id/contact_avatar"
                android:src="@drawable/badge_bg"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/title_view"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/contact_avatar"
                android:layout_toLeftOf="@+id/right_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/right_title"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:textColor="#ff999999"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/sub_title"
                android:singleLine="true"
                android:textColor="#ff999999"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/contact_avatar"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp" />
        </RelativeLayout>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>