<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/me_background_color">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText android:id="@+id/input_view"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"
                          android:layout_marginTop="20dp"
                          android:layout_height="150dp"
                          android:textSize="20dp"
                          android:hint="我们会在第一时间联系您"
                          android:padding="8dp"
                          android:gravity="top"
                          android:background="@drawable/common_border"
                          android:textColor="@color/plaza_person_gray"
                          android:layout_width="match_parent"/>
                <View android:layout_height="20dp"
                    android:layout_width="fill_parent"/>
                <Button android:id="@+id/button_commit"
                        android:layout_height="40dp"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="提交"
                        android:background="@drawable/btn1"
                        android:textSize="20dp"
                        android:textColor="@drawable/login_text_shape_selector"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/activity_title" />
</RelativeLayout>