<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contact_group_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/list_group_selector">

        <TextView
            android:id="@+id/contact_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/contact_group_indicator" />

        <View
            android:id="@+id/contact_group_content_separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/contact_group_content_separator"
            android:background="#c8c8c8" />

    </RelativeLayout>

</LinearLayout>