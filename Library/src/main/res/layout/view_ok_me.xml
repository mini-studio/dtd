<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/relayout_redivious" >

    <TextView
        android:id="@+id/lable_where"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="发送祝福给xxx老师"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/zhufu_jutimsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lable_where"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:text="1111" />

    <ImageView
        android:id="@+id/dialog_title_bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/zhufu_jutimsg"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />

   

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dialog_title_bottom_line"
        android:orientation="horizontal"
        android:padding="10dp" >

        <Button
            android:id="@+id/cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/wrm_bg_white"
            android:text="取消"
            android:textColor="@color/bmm_teacher_text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/okbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/wrm_bg_white"
            android:text="确定"
            android:textColor="@color/bmm_teacher_text_color"
            android:textSize="15sp" />
    </LinearLayout>
     <ImageButton
        android:layout_width="0.3dp"
        android:layout_height="40dp"
        android:layout_below="@id/dialog_title_bottom_line"
        android:layout_weight="0"
        android:layout_centerHorizontal="true"
        android:background="@color/line_color" />

</RelativeLayout>