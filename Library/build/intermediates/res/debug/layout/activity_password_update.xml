<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/old_pswd_layout"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/old_pwd"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="旧密码:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/old_pwd_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/old_pwd"
                android:layout_weight="1"
                android:background="@drawable/signin_text_field_background"
                android:clickable="false"
                android:digits="@string/type"
                android:hint="6-16位字符"
                android:maxLength="16"
                android:textSize="16sp"
                android:password="true"
                android:singleLine="true" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e8e8e8" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/new_pwd"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="新密码:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/new_pwd_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/new_pwd"
                android:layout_weight="1"
                android:background="@drawable/signin_text_field_background"
                android:clickable="false"
                android:digits="@string/type"
                android:hint="6-16位字符"
                android:maxLength="16"
                android:textSize="16sp"
                android:password="true"
                android:singleLine="true" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e8e8e8" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/repeat_pwd"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="重复密码:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/repeat_pwd_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/repeat_pwd"
                android:layout_weight="1"
                android:background="@drawable/signin_text_field_background"
                android:clickable="false"
                android:digits="@string/type"
                android:hint="6-16位字符"
                android:maxLength="16"
                android:textSize="16sp"
                android:password="true"
                android:singleLine="true" />


        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />

    </LinearLayout>

    <include
        android:id="@+id/tittle_update_pwd"
        layout="@layout/activity_title" />
</RelativeLayout><!-- From: file:/Users/Wuquancheng/Documents/workspace/ChEdu/Android/Express/Library/src/main/res/layout/activity_password_update.xml -->