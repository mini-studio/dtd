<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_list_view_background" >

    <RelativeLayout
        android:id="@+id/item_job_all_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/relayout_redivious" >

        <TextView
            android:id="@+id/send_job_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="04-12-12 "
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_job_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="english "
            android:textColor="@color/fu_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/feedBackNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/send_job_time"
            android:layout_marginRight="10dp"
            android:textColor="@color/fu_text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@id/job_name"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/message_line"
        android:orientation="vertical"
        android:layout_below="@id/item_job_all_msg"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</RelativeLayout>