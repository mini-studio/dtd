<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/send_view_header"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:orientation="vertical">
        <View android:id="@+id/top_line"
              android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:layout_marginTop="1dp"
              android:background="@color/common_grey"/>
        <LinearLayout android:id="@+id/item_layout"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:layout_marginLeft="4dp"
                      android:layout_marginRight="4dp"
                      android:orientation="vertical">
            <LinearLayout android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:layout_marginLeft="16dp"
                          android:layout_marginRight="16dp"
                          android:layout_marginTop="10dp"
                          android:orientation="vertical">
                <LinearLayout android:layout_height="wrap_content"
                              android:layout_width="match_parent"
                              android:orientation="horizontal">
                    <LinearLayout android:id="@+id/package_info_layout"
                                  android:layout_width="fill_parent"
                                  android:orientation="vertical"
                                  android:layout_height="wrap_content">
                        <!--发件人、收入、状态-->
                        <LinearLayout android:layout_width="fill_parent"
                                      android:orientation="horizontal"
                                      android:layout_marginTop="4dp"
                                      android:layout_marginBottom="4dp"
                                      android:weightSum="3"
                                      android:layout_height="wrap_content">
                            <LinearLayout android:layout_width="wrap_content"
                                          android:orientation="horizontal"
                                          android:layout_weight="1"
                                          android:layout_height="wrap_content">
                                <TextView android:id="@+id/name_title"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_gravity="center_vertical|left"
                                          android:text="发件人:"
                                          android:textSize="18sp"/>
                                <TextView android:id="@+id/name_value_text_view"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_gravity="center_vertical|left"
                                          android:text="小明"
                                          android:textSize="18sp"/>
                            </LinearLayout>
                            <LinearLayout android:layout_width="wrap_content"
                                          android:orientation="horizontal"
                                          android:layout_weight="1"
                                          android:layout_height="wrap_content">
                                <TextView android:id="@+id/income_title"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_gravity="center_vertical"
                                          android:text="收入:"
                                          android:textSize="18sp"/>
                                <TextView android:id="@+id/income_value_text_view"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_gravity="center_vertical"
                                          android:text="￥96"
                                          android:textSize="18sp"/>
                            </LinearLayout>
                            <LinearLayout android:layout_width="wrap_content"
                                          android:layout_weight="1"
                                          android:orientation="horizontal"
                                          android:layout_height="wrap_content">
                                <TextView android:id="@+id/status_title"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_gravity="center_vertical|right"
                                          android:text="状态:"
                                          android:textColor="@color/red"
                                          android:textSize="18sp"/>
                                <TextView android:id="@+id/status_value_text_view"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_gravity="center_vertical|right"
                                          android:textColor="@color/red"
                                          android:text="未付费"
                                          android:textSize="18sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_marginTop="4dp"
                                      android:layout_marginBottom="4dp"
                            android:layout_height="wrap_content">
                            <TextView android:id="@+id/source_time_title"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="center_vertical|right"
                                      android:text="取件时间:"
                                      android:textSize="18sp"/>
                            <TextView android:id="@+id/source_time_value_text_view"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="center_vertical|right"
                                      android:text="10-03 14:00"
                                      android:textSize="18sp"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="4dp"
                                      android:layout_marginBottom="4dp">
                            <TextView android:id="@+id/source_address_title"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="top"
                                      android:text="取件地址:"
                                      android:textSize="18sp"/>
                            <TextView android:id="@+id/source_address_value_text_view"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="center_vertical|right"
                                      android:text="北京市海淀区"
                                      android:textSize="18sp"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="4dp"
                                      android:layout_marginBottom="4dp">
                            <TextView android:id="@+id/dest_time_title"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="center_vertical|right"
                                      android:text="送件时间:"
                                      android:textSize="18sp"/>
                            <TextView android:id="@+id/dest_time_value_text_view"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="center_vertical|right"
                                      android:text="10-03 14:00"
                                      android:textSize="18sp"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="4dp"
                                      android:layout_marginBottom="4dp">
                            <TextView android:id="@+id/dest_address_title"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="top"
                                      android:text="送件地址:"
                                      android:textSize="18sp"/>
                            <TextView android:id="@+id/dest_address_value_text_view"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="center_vertical|right"
                                      android:text="北京市海淀区"
                                      android:textSize="18sp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView android:id="@+id/more_data_text"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:gravity="center"
                              android:text="点击加载更多"
                              android:textColor="@color/blue"
                              android:visibility="gone"
                              android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="10dp"
                />
            <View android:id="@+id/bottom_line"
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:layout_marginTop="-2dp"
                  android:background="@color/common_grey"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>