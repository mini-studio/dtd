<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fun_activity_bg">

    <LinearLayout
        android:id="@+id/fun_ll_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/fun_ll_send_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1.0dip"
                android:src="@drawable/send_notice_icon"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dip"
                android:shadowColor="#ff000000"
                android:text="@string/fun_send_notice"
                android:textColor="#00A99D"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fun_ll_send_homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/send_homework_icon"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dip"
                android:text="@string/fun_send_homework"
                android:textColor="#00A99D"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fun_ll_send_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/send_vote_icon"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dip"
                android:shadowColor="#ff000000"
                android:text="@string/fun_send_vote"
                android:textColor="#00A99D"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fun_ll_send_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/send_survey_icon"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dip"
                android:shadowColor="#ff000000"
                android:text="@string/fun_send_survey"
                android:textColor="#00A99D"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fun_ll_add"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">


        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/c_tab_icon_add_nor" />

    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/Wuquancheng/Documents/workspace/ChEdu/Android/Express/Library/src/main/res/layout/activity_func.xml -->