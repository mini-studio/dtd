<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/common_item_white"
    android:orientation="vertical">

    <View
        android:id="@+id/score_table_item_top_view_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#dcdcdc"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/score_table_item_layout"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1.9"
            android:background="@color/common_item_white">

            <TextView
                android:id="@+id/score_table_item_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:textColor="@color/common_action_view_text"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1.1"
            android:background="@color/common_item_white">

            <TextView
                android:id="@+id/score_table_item_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/common_item_white"
                android:textColor="@color/common_action_view_text"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:layout_weight="0.1"
            android:background="#dcdcdc" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#dcdcdc"
        android:visibility="visible" />

</LinearLayout><!-- From: file:/Users/Wuquancheng/Documents/workspace/ChEdu/Android/Express/Library/src/main/res/layout/view_score_details.xml -->