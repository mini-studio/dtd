<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_menu_bg"
    android:maxWidth="200dip"
    android:minWidth="200dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/custom_menu_title"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/custom_menu_bg"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:textSize="21sp" />

    <View
        android:id="@+id/custom_menu_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
         />

    <org.mini.frame.toolkit.MiniRoundCornerListView
        android:id="@+id/custom_menu_list"
        android:listSelector="@drawable/list_item_selector"
        android:layout_width="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:layout_height="wrap_content" />

</LinearLayout><!-- From: file:/Users/Wuquancheng/Documents/workspace/ChEdu/Android/Express/Library/src/main/res/layout/view_custom_menu.xml -->