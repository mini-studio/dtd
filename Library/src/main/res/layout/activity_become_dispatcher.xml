<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <View android:layout_width="match_parent"
                  android:layout_height="10dp"/>
            <LinearLayout
                          android:id="@+id/contact_view"
                          android:layout_width="match_parent"
                          android:layout_height="40dp"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:background="@drawable/common_border"
                          android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:layout_marginLeft="10dp"
                          android:textSize="20dp"
                          android:gravity="center_vertical"
                          android:text="紧急联系人电话"/>
                <TextView android:id="@+id/contact_phone"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="30dp"
                          android:layout_height="fill_parent"
                          android:gravity="center_vertical|right"
                          android:textSize="20dp"
                          android:textColor="@color/plaza_person_gray"
                          android:layout_width="match_parent"/>
                <ImageView android:layout_height="wrap_content"
                           android:layout_width="wrap_content"
                           android:layout_gravity="center_vertical|right"
                           android:layout_marginLeft="-30dp"
                           android:src="@drawable/icon_arrow_right"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="10dp"/>
            <LinearLayout
                android:id="@+id/line_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/common_border"
                android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:layout_marginLeft="10dp"
                          android:textSize="20dp"
                          android:gravity="center_vertical"
                          android:text="添加常用线路"/>
                <TextView android:id="@+id/line_status_view"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="30dp"
                          android:layout_height="fill_parent"
                          android:gravity="center_vertical|right"
                          android:textSize="20dp"
                          android:text="未设置"
                          android:textColor="@color/plaza_person_gray"
                          android:layout_width="match_parent"/>
                <ImageView android:layout_height="wrap_content"
                           android:layout_width="wrap_content"
                           android:layout_gravity="center_vertical|right"
                           android:layout_marginLeft="-30dp"
                           android:src="@drawable/icon_arrow_right"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="10dp"/>
            <LinearLayout
                android:id="@+id/line_id_card_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/common_border"
                android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:layout_marginLeft="10dp"
                          android:textSize="20dp"
                          android:gravity="center_vertical"
                          android:text="手持身份证照片"/>
                <TextView android:id="@+id/line_id_card_view"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="30dp"
                          android:layout_height="fill_parent"
                          android:gravity="center_vertical|right"
                          android:textSize="20dp"
                          android:text="未上传"
                          android:textColor="@color/plaza_person_gray"
                          android:layout_width="match_parent"/>
                <ImageView android:layout_height="wrap_content"
                           android:layout_width="wrap_content"
                           android:layout_gravity="center_vertical|right"
                           android:layout_marginLeft="-30dp"
                           android:src="@drawable/icon_arrow_right"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="10dp"/>
            <LinearLayout
                android:id="@+id/line_bank_card_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/common_border"
                android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:layout_marginLeft="10dp"
                          android:textSize="20dp"
                          android:gravity="center_vertical"
                          android:text="银行卡照片"/>
                <TextView android:id="@+id/line_bank_card_view"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="30dp"
                          android:layout_height="fill_parent"
                          android:gravity="center_vertical|right"
                          android:textSize="20dp"
                          android:text="未上传"
                          android:textColor="@color/plaza_person_gray"
                          android:layout_width="match_parent"/>
                <ImageView android:layout_height="wrap_content"
                           android:layout_width="wrap_content"
                           android:layout_gravity="center_vertical|right"
                           android:layout_marginLeft="-30dp"
                           android:src="@drawable/icon_arrow_right"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/upload_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/common_border"
                android:orientation="vertical"
                android:weightSum="1">
                <View android:layout_height="0.5dp"
                    android:layout_width="fill_parent"
                    android:background="@color/common_grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/white"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <ImageView android:layout_marginLeft="10dp"
                               android:layout_marginTop="10dp"
                               android:layout_marginRight="5dp"
                               android:layout_height="match_parent"
                               android:layout_width="match_parent"
                               android:scaleType="fitCenter"
                               android:layout_weight="1"
                               android:src="@drawable/as_22"/>
                    <ImageView android:layout_marginLeft="5dp"
                               android:layout_marginTop="10dp"
                               android:layout_marginRight="10dp"
                               android:layout_height="match_parent"
                               android:layout_width="match_parent"
                               android:scaleType="fitCenter"
                               android:layout_weight="1"
                               android:src="@drawable/as_26"/>
                </LinearLayout>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_margin="10dp"
                          android:textColor="@color/common_grey"
                          android:textSize="18dp"
                    android:text="为了保证发件人利益，送件人需上传本人正面手持身份证照片，同时为了您能正常拿到送件费，需上传本人任意银行卡照片，送件完成后送件费会在24小时内打入您的银行卡，两项审核都通过后才能正常接单"
                    />
                <TextView android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:layout_margin="10dp"
                          android:textColor="@color/red"
                          android:textSize="18dp"
                          android:text="注：照片上传后不可更改。"
                    />
            </LinearLayout>

            <View android:layout_height="20dp"
                  android:layout_width="fill_parent"/>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/activity_title" />
</RelativeLayout>