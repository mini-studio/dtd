<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_background_color">
    <ScrollView android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="48dp">
    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_avatar_item"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@color/wrm_bg_white">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_line_color" />
            <org.mini.frame.view.MiniImageView
                android:id="@+id/avatar_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_avatar"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView android:id="@+id/profile_name_view"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:layout_marginLeft="90dp"
                      android:textSize="18sp"
                      android:layout_marginTop="16dp"
                      android:text="互动通李岩"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_alignParentBottom="true"
                          android:layout_marginBottom="12dp"
                          android:layout_marginLeft="90dp">
                <TextView
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textSize="18sp"
                          android:text="昵称: "/>
                <TextView android:id="@+id/profile_nickname_view"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textSize="18sp"
                          android:text="小茶lava"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/common_line_color" />
        </RelativeLayout>

        <View android:layout_height="30dp"
              android:layout_width="match_parent"/>

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/wrm_bg_white">
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/common_line_color" />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="姓名"
                    android:textColor="@color/common_grey"
                    android:textSize="20sp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="三通"
                    android:textColor="@color/common_grey"
                    android:background="@null"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_line_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nickname_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/wrm_bg_white">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="昵称"
                    android:textColor="@color/common_grey"
                    android:textSize="20sp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="三通"
                    android:textColor="@color/common_grey"
                    android:background="@null"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_line_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gender_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/wrm_bg_white">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="性别"
                    android:textColor="@color/common_grey"
                    android:textSize="20sp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="男"
                    android:textColor="@color/common_grey"
                    android:background="@null"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="年龄"
                    android:textColor="@color/common_grey"
                    android:textSize="20sp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="25"
                    android:textColor="@color/common_grey"
                    android:background="@null"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_line_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/wrm_bg_white">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="电话"
                    android:textColor="@color/common_grey"
                    android:textSize="20sp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="18611576628"
                    android:textColor="@color/common_grey"
                    android:background="@null"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_line_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@color/wrm_bg_white">
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_line_color" />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="紧急联系人"
                    android:textColor="@color/common_grey"
                    android:textSize="20sp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="他是第二联系人"
                    android:textColor="@color/common_grey"
                    android:background="@null"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/contact_mobile_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/wrm_bg_white">
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_line_color" />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="电话"
                    android:textColor="@color/common_grey"
                    android:textSize="20sp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="18611576628"
                    android:textColor="@color/common_grey"
                    android:background="@null"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_line_color" />
        </LinearLayout>
        <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="60dp"
                      android:layout_marginTop="20dp"
                      android:orientation="vertical"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:background="@color/wrm_bg_white">
            <Button android:id="@+id/confirm_button"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="确定"
                    android:background="@color/signin_button_background_color"
                    android:textColor="@drawable/login_text_shape_selector"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/activity_title" />
</RelativeLayout>