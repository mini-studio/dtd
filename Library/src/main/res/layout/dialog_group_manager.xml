<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/relayout_redivious" >

    <TextView
        android:id="@+id/dialog_group_lable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="请输入群组名称"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/dialog_group_manager_et"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:background="@drawable/chat_edit_normal"
        android:layout_below="@id/dialog_group_lable"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/dialog_group_manager_xian"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/dialog_group_manager_et"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/dialog_group_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/dialog_group_manager_xian"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_group_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dialog_group_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:text="确定"
            android:textColor="@color/blue"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="0.3dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_group_manager_xian"
        android:layout_gravity="center_horizontal"
        android:background="@color/line_color" />

</RelativeLayout>