<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color">
    <ScrollView android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="48dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View android:layout_height="10dp"
                android:layout_width="fill_parent"/>
            <LinearLayout
                android:id="@+id/layout_avatar"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@color/wrm_bg_white">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_line_color" />
                    <LinearLayout android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:layout_marginLeft="20dp"
                            android:text="头像"
                            android:textColor="@color/common_grey"
                            android:textSize="20sp" />
                        <org.mini.frame.view.MiniImageView android:id="@+id/avatar_image_view"
                                   android:layout_height="48dp"
                                   android:layout_width="48dp"
                                   android:layout_marginLeft="-90dp"
                                   android:layout_gravity="center_vertical"
                                   android:background="@drawable/default_avatar"/>
                        <ImageView android:layout_width="30dp"
                                   android:layout_height="match_parent"
                                   android:layout_marginRight="10dp"
                                   android:src="@drawable/icon_arrow_right"/>
                    </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/common_line_color" />
            </LinearLayout>
            <View android:layout_height="10dp"
                  android:layout_width="fill_parent"/>
            <LinearLayout
                android:id="@+id/layout_nickname"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/wrm_bg_white">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_line_color" />
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_weight="2"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="昵称"
                        android:textColor="@color/common_grey"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/nickname_view"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:textColor="@color/common_grey"
                        android:textSize="20sp" />
                    <ImageView android:layout_width="30dp"
                               android:layout_height="match_parent"
                               android:layout_marginRight="10dp"
                               android:src="@drawable/icon_arrow_right"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/common_line_color" />
            </LinearLayout>
            <View android:layout_height="10dp"
                  android:layout_width="fill_parent"/>
            <LinearLayout
                android:id="@+id/layout_passwd"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/wrm_bg_white">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_line_color" />
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="密码"
                        android:textColor="@color/common_grey"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="10dp"
                        android:text="修改"
                        android:textColor="@color/common_grey"
                        android:textSize="20sp" />
                    <ImageView android:layout_width="30dp"
                               android:layout_height="match_parent"
                               android:layout_marginRight="10dp"
                               android:src="@drawable/icon_arrow_right"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/common_line_color" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/activity_title" />
</RelativeLayout>