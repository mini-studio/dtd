<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <!-- 评论 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@drawable/bottom_shadow" />

        <LinearLayout
            android:background="@color/common_darker_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="8dp">

            <org.mini.frame.view.MiniCustomDeleteEdit
                android:id="@+id/feed_detail_bottom_comment_et_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/activity_feed_detail_comment_bg"
                android:drawablePadding="5dp"
                android:maxLines="5"
                android:minHeight="36dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:hint="@string/comment"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/feed_detail_bottom_comment_tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/send"
                android:textColor="@android:color/darker_gray"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/Wuquancheng/Documents/workspace/ChEdu/Android/Express/Library/src/main/res/layout/activity_feed_detail_bottom_comment.xml -->