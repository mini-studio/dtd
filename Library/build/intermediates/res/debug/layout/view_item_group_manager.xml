<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_manager_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/delete_view"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/rename_group_view"
            android:src="@drawable/icon_call"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/common_brown"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="重命名"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/delete_group_view"
            android:src="@drawable/icon_call"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="删 除"
            android:textSize="16dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/group_manager_view"
        android:background="@drawable/list_group_selector"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/item_group_group_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:background="@drawable/grp_comm"/>
        <TextView
            android:id="@+id/item_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_group_group_icon"
            android:textColor="@color/text_color" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout><!-- From: file:/Users/Wuquancheng/Documents/workspace/ChEdu/Android/Express/Library/src/main/res/layout/view_item_group_manager.xml -->