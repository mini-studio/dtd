<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:background="@drawable/plaza_system_setting_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:text="提取金额"
                          android:gravity="center"
                          android:textColor="@color/black"
                          android:textSize="20dp"
                          android:layout_marginLeft="16dp"
                          android:layout_marginRight="16dp"
                    />
                <TextView android:id="@+id/take_cash_text_view"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:text=""
                          android:gravity="center"
                          android:textColor="@color/black"
                          android:textSize="20dp"
                          android:layout_marginLeft="16dp"
                          android:layout_marginRight="16dp"
                    />
            </LinearLayout>
            <TextView android:id="@+id/message_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="当前最高可提现金额元，申请提现后将在三个工作日内打入您预先设置的银行卡。"
                      android:textColor="@color/red"
                      android:textSize="18dp"
                      android:layout_marginTop="16dp"
                      android:layout_marginLeft="16dp"
                      android:layout_marginRight="16dp"
                />
            <View android:layout_height="fill_parent"
                  android:layout_width="fill_parent">
            </View>
            <Button
                android:id="@+id/take_cash_button"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="-70dp"
                android:textSize="20dp"
                android:text="申请提现"
                android:background="@drawable/round_corner_red_shape"
                android:textColor="@color/white" />
            />
        </LinearLayout>

    </RelativeLayout>
    <include layout="@layout/activity_title" />
</RelativeLayout>