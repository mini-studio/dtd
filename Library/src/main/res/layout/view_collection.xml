<?xml version="1.0" encoding="utf-8"?>
<org.mini.frame.view.MiniLoadingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_collection_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_background"
    android:orientation="vertical">


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/collection_refresh_list_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:divider="@null"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        ptr:ptrDrawable="@drawable/list_refresh_loading"
        />

</org.mini.frame.view.MiniLoadingRelativeLayout>