<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/me_background_color">
    <LinearLayout android:id="@+id/content_layout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_marginTop="48dp">
        <ScrollView  android:layout_width="match_parent"
                     android:layout_height="match_parent">
            <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:orientation="vertical">
                <TextView android:id="@+id/location"
                          android:layout_height="18dp"
                          android:layout_width="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:text="订单信息"
                          android:textSize="14sp"/>
                <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_marginTop="10dp"
                              android:layout_marginBottom="10dp"
                              android:background="@color/common_grey"
                              android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginRight="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="10dp"
                                      android:layout_marginLeft="10dp"
                                      android:layout_marginRight="10dp"
                                      android:layout_marginBottom="10dp"
                                      android:orientation="horizontal">
                            <TextView android:layout_height="18dp"
                                      android:layout_width="wrap_content"
                                      android:layout_gravity="center_vertical"
                                      android:text="目的地:"
                                      android:textSize="14sp"/>
                            <EditText android:id="@+id/city_edit_text"
                                      android:layout_width="200dp"
                                      android:layout_height="18dp"
                                      android:maxLines="1"
                                      android:maxLength="20"
                                      android:textSize="14sp"
                                      android:editable="false"
                                      android:text="北京"
                                      android:background="@null"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      android:layout_marginRight="10dp"
                                      android:layout_marginBottom="10dp"
                                      android:orientation="horizontal">
                            <TextView android:layout_height="18dp"
                                      android:layout_width="wrap_content"
                                      android:text="收货地址:"
                                      android:textSize="14sp"/>
                            <EditText android:id="@+id/to_address_edit_text"
                                      android:layout_width="match_parent"
                                      android:layout_height="40dp"
                                      android:maxLines="2"
                                      android:gravity="top"
                                      android:textSize="14sp"
                                      android:text="北京"
                                      android:editable="false"
                                      android:background="@null"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      android:layout_marginRight="10dp"
                                      android:layout_marginBottom="10dp"
                                      android:orientation="horizontal">
                            <TextView android:layout_height="18dp"
                                      android:layout_width="wrap_content"
                                      android:text="取件地址:"
                                      android:textSize="14sp"/>
                            <EditText android:id="@+id/from_address_edit_text"
                                      android:layout_width="match_parent"
                                      android:layout_height="40dp"
                                      android:maxLines="2"
                                      android:gravity="top"
                                      android:editable="false"
                                      android:textSize="14sp"
                                      android:text="北京"
                                      android:background="@null"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      android:layout_marginRight="10dp"
                                      android:layout_marginBottom="10dp"
                                      android:orientation="horizontal">
                            <TextView android:layout_height="18dp"
                                      android:layout_width="wrap_content"
                                      android:text="取件时间:"
                                      android:textSize="14sp"/>
                            <EditText android:id="@+id/from_time_edit_text"
                                      android:layout_width="match_parent"
                                      android:layout_height="20dp"
                                      android:maxLines="1"
                                      android:gravity="top"
                                      android:textSize="14sp"
                                      android:text="2015-10-29 15:39"
                                      android:editable="false"
                                      android:background="@null"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      android:layout_marginRight="10dp"
                                      android:layout_marginBottom="10dp"
                                      android:orientation="horizontal">
                            <TextView android:layout_height="18dp"
                                      android:layout_width="wrap_content"
                                      android:text="货物类别:"
                                      android:textSize="14sp"/>
                            <EditText android:id="@+id/package_type"
                                      android:layout_width="match_parent"
                                      android:layout_height="20dp"
                                      android:maxLines="1"
                                      android:gravity="top"
                                      android:textSize="14sp"
                                      android:text="化妆品"
                                      android:editable="false"
                                      android:background="@null"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      android:layout_marginRight="10dp"
                                      android:layout_marginBottom="10dp"
                                      android:orientation="horizontal">
                            <TextView android:layout_height="18dp"
                                      android:layout_width="wrap_content"
                                      android:text="货物信息:"
                                      android:textSize="14sp"/>
                            <EditText android:id="@+id/package_info"
                                      android:layout_width="match_parent"
                                      android:layout_height="40dp"
                                      android:maxLines="2"
                                      android:gravity="top"
                                      android:textSize="14sp"
                                      android:editable="false"
                                      android:text="内附货物清单"
                                      android:background="@null"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      android:layout_marginRight="10dp"
                                      android:layout_marginBottom="10dp"
                                      android:orientation="horizontal">
                            <TextView android:layout_height="18dp"
                                      android:layout_width="40dp"
                                      android:text="重量:"
                                      android:textSize="14sp"/>
                            <EditText android:id="@+id/package_weight"
                                      android:layout_width="100dp"
                                      android:layout_height="20dp"
                                      android:maxLines="1"
                                      android:gravity="top"
                                      android:textSize="14sp"
                                      android:text="500g"
                                      android:editable="false"
                                      android:background="@null"/>
                            <TextView android:layout_height="18dp"
                                      android:layout_width="70dp"
                                      android:text="配送方式:"
                                      android:textSize="14sp"/>
                            <EditText android:id="@+id/package_send_method"
                                      android:layout_width="match_parent"
                                      android:layout_height="20dp"
                                      android:maxLines="1"
                                      android:gravity="top"
                                      android:textSize="14sp"
                                      android:text="顺丰快递"
                                      android:editable="false"
                                      android:background="@null"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginLeft="10dp"
                                      android:layout_marginRight="10dp"
                                      android:layout_marginBottom="10dp"
                                      android:orientation="horizontal">
                            <TextView android:layout_height="18dp"
                                      android:layout_width="wrap_content"
                                      android:text="保价:"
                                      android:textSize="14sp"/>
                            <EditText android:id="@+id/package_safety_price"
                                      android:layout_width="match_parent"
                                      android:layout_height="40dp"
                                      android:layout_marginLeft="10dp"
                                      android:maxLines="1"
                                      android:gravity="top"
                                      android:textSize="30sp"
                                      android:text="100元"
                                      android:textColor="@color/red"
                                      android:editable="false"
                                      android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button android:id="@+id/next_button"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@color/signin_button_background_color"
                        android:textColor="@drawable/login_text_shape_selector"
                        android:text="下一步"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/activity_title" />
</RelativeLayout>