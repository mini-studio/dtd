<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_dismiss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="#f9f9f9" >

        <ImageView
            android:id="@+id/person_image"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_darker_white" />

        <RelativeLayout
            android:id="@+id/contacts_save_phone_dialog"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/person_image"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/common_round_background_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="添加到手机通讯录"
                android:textColor="@color/common_teacher_blue"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contacts_copy_phone_dialog"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/contacts_save_phone_dialog"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/common_round_background_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="复制电话号码"
                android:textColor="@color/common_teacher_blue"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contacts_finish_phone_dialog"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/contacts_copy_phone_dialog"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/common_round_background_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:text="取消"
                android:textColor="@color/mini_tab_text_default"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/Wuquancheng/Documents/workspace/ChEdu/Android/Express/Library/src/main/res/layout/view_person_detail_more.xml -->