<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/active_title_view"
    android:layout_width="match_parent"
    android:layout_height="53dp">

    <View
        android:id="@+id/title_shadow_view"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/action_shadow" />

    <RelativeLayout
        android:id="@+id/title_content_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/navi_title_background_color"
        android:paddingLeft="10dp">

        <LinearLayout
            android:id="@+id/app_title_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView android:id="@+id/app_left_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/app_title_back_image"/>
            <ImageView android:id="@+id/app_left_title_image"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:visibility="gone"/>
            <TextView
                android:id="@+id/app_title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                android:lines="1"
                android:textColor="@color/navi_title_font_color"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/app_center_title_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp">

            <TextView
                android:id="@+id/app_center_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center_horizontal|center_vertical"
                android:lines="1"
                android:textColor="@color/navi_title_font_color"
                android:textSize="18sp" />

            <ImageView android:id="@+id/title_mid_image_view"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:layout_centerVertical="true"
                       android:visibility="gone"/>
            <ImageView
                android:id="@+id/title_mid_badge_view"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/app_center_title"
                android:background="@drawable/badge_bg"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app_title_right"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/app_right_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/app_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:lines="1"
                android:textSize="16sp"
                android:textColor="@color/navi_title_font_color"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_right_badge_view"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/badge_bg"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_layout_info"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-40dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/title_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
