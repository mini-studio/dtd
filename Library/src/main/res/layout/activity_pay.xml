<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_background_color">
    <ScrollView android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="48dp"
                android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--发件基本信息 地点、物品名称、需要支付的金额-->
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">
                <!--发件地点信息-->
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_height="30dp"
                    android:layout_width="fill_parent">
                    <TextView
                        android:textColor="@color/black"
                        android:text="发件信息："
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"/>
                    <TextView
                        android:id="@+id/from_city"
                        android:textColor="@color/black"
                        android:text="北京"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"/>
                    <View
                        android:background="@color/black"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_width="40dp"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/to_city"
                        android:textColor="@color/black"
                        android:text="北京"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"/>

                </LinearLayout>
                <!--发件名称-->
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="30dp">
                    <TextView
                        android:text="物品名称："
                        android:textColor="@color/common_grey"
                        android:textSize="20dp"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/package_name"
                        android:text="物品名称"
                        android:textColor="@color/common_grey"
                        android:textSize="20dp"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <!--支付金额-->
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="30dp">
                    <TextView
                        android:text="需支付："
                        android:textColor="@color/red"
                        android:textSize="20dp"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/package_price"
                        android:text="120元"
                        android:textColor="@color/red"
                        android:textSize="20dp"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="18dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:text="选择支付方式："
                        android:textSize="20dp"
                        android:textColor="@color/common_grey"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/common_grey"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"/>
                <RelativeLayout
                    android:id="@+id/layout_wx_pay"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:text="微信支付"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/wx_pay"
                        android:background="@drawable/a"
                        />
                </RelativeLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/common_grey"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"/>
                <RelativeLayout
                    android:id="@+id/layout_ali_pay"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:text="支付宝"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/ali_pay"
                        android:background="@drawable/s"
                        />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_pay"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@drawable/btn2"/>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/activity_title" />
</RelativeLayout>