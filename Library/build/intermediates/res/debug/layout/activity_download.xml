<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_title_bg_top"
            android:minHeight="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_download_tv_titile"
                    android:layout_width="fill_parent"
                    android:layout_height="56dip"
                    android:layout_marginLeft="17dp"
                    android:gravity="center|left"
                    android:textColor="@color/common_green"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/activity_download_view_title_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/custom_dialog_title_bg_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">


            <ProgressBar
                android:id="@+id/activity_download_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:minHeight="15dp" />

            <TextView
                android:id="@+id/activity_download_tv_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="60dp"
                android:text="0%"
                android:textColor="@color/black"
                android:visibility="visible" />

        </LinearLayout>

        <View
            android:id="@+id/custom_dialog_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dcdcdc" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/activity_download_bt_close"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_dialog_left_button_selector"
                android:textColor="@color/common_green"
                android:textSize="18sp"
                android:visibility="gone" />

            <View
                android:id="@+id/activity_download_button_div"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                android:visibility="gone" />

            <Button
                android:id="@+id/activity_download_bt_install"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_dialog_right_button_selector"
                android:textColor="@color/common_green"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/Wuquancheng/Documents/workspace/ChEdu/Android/Express/Library/src/main/res/layout/activity_download.xml -->